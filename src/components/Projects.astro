---
import { projects } from "../config/projects.json";
---

<h2 class="font-bold text-4xl my-4 text-center ">Projects</h2>

{
  projects.map((project) => (
    <div class="flex flex-col md:flex-row text-center">
      <div class="flex-1  gap-y-3 p-4">
        <h2 class="font-bold text-2xl my-4">{project.titulo}</h2>
        <p class="my-2">{project.desc}</p>
        <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400">More info</button>
      </div>
      <div class="flex-1">
        <img src={project.image} class="w-72 m-auto"   alt="" />
      </div>
    </div>
  ))
}
